<?xml version="1.0" encoding="utf-8"?>
<com.soxfmr.realtemp.view.MaterialDesignPalette
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">
    <com.soxfmr.realtemp.view.MaruisProgress
        android:id="@+id/main_measurer"
        android:layout_marginLeft="50dp"
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:arc_stroke_width="18dp"
        app:arc_bottom_text="@string/main_temperature_label"
        app:arc_suffix_text="@string/main_temperature_symbol"
        app:arc_text_color="@color/colorPrimaryLight"
        app:arc_unfinished_color="@color/colorPrimaryDark"
        app:arc_text_size="48sp"
        app:arc_bottom_text_size="18sp"
        app:arc_suffix_text_padding="10dp"
        android:layout_centerInParent="true" />
</com.soxfmr.realtemp.view.MaterialDesignPalette>